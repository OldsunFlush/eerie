---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title?: string;
  description?: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <Head
      title={`${title} · ${SITE.TITLE}`}
      description="Une collection de poèmes personnels, écrits à la fin des années 2000."
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
